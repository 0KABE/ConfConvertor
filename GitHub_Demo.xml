<?xml version="1.0"?>
<!--需要注意&amp;需要使用&amp;amp;转义-->
<conf>
    <General>
        <ipv6 value="true/false"/>
        <loglevel value="verbose/info/notify/warning"/>
        <show-error-page-for-reject value="true/false"/>
        <allow-wifi-access value="true/false"/>
        <skip-proxy>
            <Item>value</Item>
            <Item>value</Item>
            <Item>value</Item>
        </skip-proxy>
        <tun-excluded-routes>
            <Item>value</Item>
            <Item>value</Item>
            <Item>value</Item>
        </tun-excluded-routes>
        <tun-included-routes>
            <Item>value</Item>
            <Item>value</Item>
            <Item>value</Item>
        </tun-included-routes>
        <DnsServer>
            <Item></Item>
            <Item></Item>
            <Item></Item>
            <Item></Item>
        </DnsServer>
    </General>

    <Replica>
        <hide-apple-request>true</hide-apple-request>
        <hide-crashlytics-request >true</hide-crashlytics-request>
        <hide-udp>false</hide-udp>
    </Replica>

    <Proxies>
        <Built-in key="" value=""/>
    </Proxies>

    <PolicyGroup>
        <Group name="" type="select">
            <policy-path></policy-path>
            <policy-path></policy-path>
            <policy></policy>
            <policy></policy>
            <policy></policy>
        </Group>
        <Group name=""type="url-test" url="" interval="" tolerance="" timeout="">
            <policy-path></policy-path>
            <policy-path></policy-path>
            <policy></policy>
            <policy></policy>
            <policy></policy>
        </Group>
        <Group name="" type="fallback" url="" interval="" timeout="">
            <policy-path></policy-path>
            <policy-path></policy-path>
            <policy></policy>
            <policy></policy>
            <policy></policy>
        </Group>
        <Group name=""type="ssid">
            <Policy name="" ssid=""/>
            <Policy name="" ssid=""/>
            <Policy name="" ssid=""/>
        </Group>
    </PolicyGroup>

    <Rules>
        <!-- 非必须：notification-text notification-interval -->
        <!-- 必须：value policy -->

        <!-- Domain-based Rule -->
        <DOMAIN value="" policy="" notification-text="" notification-interval=""/>
        <DOMAIN-SUFFIX value="" policy="" notification-text="" notification-interval=""/>
        <DOMIAN-KEYWORD value="" policy="" notification-text="" notification-interval=""/>
        <!-- IP-based Rule -->
        <GEOIP value="" policy="" no-resolve="true/false" notification-text="" notification-interval=""/>
        <IP-CIDR value="" policy="" no-resolve="true/false" notification-text="" notification-interval=""/>
        <!-- HTTP Rule -->
        <USER-AGENT value="" policy="" notification-text="" notification-interval=""/>
        <URL-REGEX value="" policy="" notification-text="" notification-interval=""/>
        <!-- Process Rule -->
        <PROCESS-NAME value="" policy="" notification-text="" notification-interval=""/>
        <!-- Logical Rule -->
        <AND value="" policy="" notification-text="" notification-interval=""/>
        <OR value="" policy="" notification-text="" notification-interval=""/>
        <NOT value="" policy="" notification-text="" notification-interval=""/>
        <!-- Miscellaneous Rule -->
        <DEST-PORT value="" policy="" notification-text="" notification-interval=""/>
        <SRC-IP value="" policy="" notification-text="" notification-interval=""/>
        <IN-PORT value="" policy="" notification-text="" notification-interval=""/>
        <!-- Ruleset -->
        <!-- type属性缺省为external -->
        <RULE-SET type="Surge3Internal/external" value="" policy="" notification-text="" notification-interval=""/>
        <!-- Final Rule -->
        <FINAL dns-failed="true/false" policy="" notification-text="" notification-interval=""/>
    </Rules>

    <Host>
        <Server key="" value=""/>
        <Local key="" value=""/>
    </Host>

    <UrlRewrite>
        <Item type="header" expression="" replacement=""/>
        <Item type="302" expression="" replacement=""/>
        <Item type="reject" expression="" replacement=""/>
    </UrlRewrite>

    <HeaderRewrite>
        <Item type="header-del" field="" />
        <Item type="header-add" field="" value=""/>
        <Item type="header-replace" field="" value=""/>
    </HeaderRewrite>

    <!-- 属性enable缺省为false -->
    <MITM enable="true/false" skip-server-cert-verify="true/false">
        <ca-p12>value</ca-p12>
        <ca-passphrase>password</ca-passphrase>
        <hostname>
            <Item></Item>
            <Item></Item>
            <Item></Item>
        </hostname>
    </MITM>
</conf>