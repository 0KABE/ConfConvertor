<?xml version="1.0"?>
<!--需要注意&amp;需要使用&amp;amp;转义-->
<conf>
    <General>
        <ipv6 value="true/false"/>
        <loglevel value="verbose/info/notify/warning"/>
        <show-error-page-for-reject value="true/false"/>
        <allow-wifi-access value="true/false"/>
        <skip-proxy>
            <Item>value</Item>
            <Item>value</Item>
            <Item>value</Item>
        </skip-proxy>
        <tun-excluded-routes>
            <Item>value</Item>
            <Item>value</Item>
            <Item>value</Item>
        </tun-excluded-routes>
        <tun-included-routes>
            <Item>value</Item>
            <Item>value</Item>
            <Item>value</Item>
        </tun-included-routes>
        <DnsServer>
            <!-- 类型缺省为external，external下必须存在参数server -->
            <Item type="system"/>
            <Item type="external" server=""/>
            <Item server=""/>
            <Item server=""/>
        </DnsServer>
    </General>

    <Replica>
        <hide-apple-request value="true/false"/>
        <hide-crashlytics-request value="true/false"/>
        <hide-udp value="true/false"/>
    </Replica>

    <Proxies>
        <PROXY type="HTTP/SOCKS5" server="" port="" username="" password="" interface="" allow-other-interface="true/false" />
        <PROXY type="ProxySOCKS5TLS/HTTPS" server="" port="" username="" password="" interface="" allow-other-interface="true/false" skip-common-name-verify="true/false" sni=""/>
        <PROXY type="Built-in" built-in="direct/reject" policy="" interface="" allow-other-interface="true/false"/>
    </Proxies>

    <PolicyGroup>
        <Group name="" type="select">
            <PolicyPath url=""/>
            <PolicyPath url=""/>
            <Policy name=""/>
            <Policy name=""/>
            <Policy name=""/>
        </Group>
        <Group name=""type="url-test" url="" interval="" tolerance="" timeout="">
            <PolicyPath url=""/>
            <PolicyPath url=""/>
            <Policy name=""/>
            <Policy name=""/>
            <Policy name=""/>
        </Group>
        <Group name="" type="fallback" url="" interval="" timeout="">
            <PolicyPath url=""/>
            <PolicyPath url=""/>
            <Policy name=""/>
            <Policy name=""/>
            <Policy name=""/>
        </Group>
        <Group name=""type="ssid">
            <Policy name="" ssid=""/>
            <Policy name="" ssid=""/>
            <Policy name="" ssid=""/>
        </Group>
    </PolicyGroup>

    <Rules>
        <!-- Domain-based Rule -->
        <DOMAIN value="" policy=""/>
        <DOMAIN-SUFFIX value="" policy=""/>
        <DOMIAN-KEYWORD value="" policy=""/>
        <!-- IP-based Rule -->
        <GEOIP value="" policy="" no-resolve="true/false"/>
        <IP-CIDR value="" policy="" no-resolve="true/false"/>
        <!-- HTTP Rule -->
        <USER-AGENT value="" policy=""/>
        <URL-REGEX value="" policy=""/>
        <!-- Process Rule -->
        <PROCESS-NAME value="" policy=""/>
        <!-- Logical Rule -->
        <AND value="" policy=""/>
        <OR value="" policy=""/>
        <NOT value="" policy=""/>
        <!-- Miscellaneous Rule -->
        <DEST-PORT value="" policy=""/>
        <SRC-IP value="" policy=""/>
        <IN-PORT value="" policy=""/>
        <!-- Ruleset -->
        <!-- type属性缺省为external -->
        <RULE-SET type="Surge3Internal/external" value="" policy=""/>
        <!-- Final Rule -->
        <FINAL dns-failed="true/false" policy=""/>
    </Rules>

    <Host>
        <Server key="" value=""/>
        <Local key="" value=""/>
    </Host>

    <UrlRewrite>
        <header expression="" replacement=""/>
        <302 expression="" replacement=""/>
        <reject expression="" replacement=""/>
    </UrlRewrite>

    <HeaderRewrite>
        <Item url="" type="header-del" field="" />
        <Item url="" type="header-add" field="" value=""/>
        <Item url="" type="header-replace" field="" value=""/>
    </HeaderRewrite>

    <!-- 属性enable缺省为false -->
    <MITM enable="true/false" skip-server-cert-verify="true/false">
        <ca-p12>value</ca-p12>
        <ca-passphrase>password</ca-passphrase>
        <hostname>*google.com</hostname>
    </MITM>
</conf>